<!DOCTYPE html>
<html>
  <head>
    <title>Login Nat</title>
    <link rel="stylesheet" href="signup.css" media="screen" />
  </head>

  <body>
    <div class="wrapper fadeInDown">
      <div id="formContent">
        <!-- Tabs Titles -->
        <h2 class="active">Sign In</h2>
        <h2 class="inactive underlineHover"><a href="/signup">Sign Up</a></h2>

        <!-- Icon -->
        <div class="fadeIn first">
          <img src="images/voro-white-bg.png" id="icon" alt="User Icon" />
        </div>

        <!-- Login Form -->
        <form action="/signup" method="post">
          <input
            type="text"
            id="login"
            class="fadeIn second"
            name="email"
            placeholder="Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
          <input
            type="password"
            id="password"
            class="fadeIn third"
            name="password"
            placeholder="Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
          <input
            type="password"
            id="password"
            class="fadeIn third"
            name="passwerd"
            placeholder="Confirm Password"
            value="<%= typeof passwerd != 'undefined' ? passwerd : '' %>"
          />
          <input
            type="password"
            id="password"
            class="fadeIn third"
            name="invite_code"
            placeholder="Invite Code"
            value="<%= typeof invite_code != 'undefined' ? invite_code : '' %>"
          />
          <input type="submit" class="fadeIn fourth" value="Sign Up" />
        </form>
      </div>
    </div>
  </body>
</html>
